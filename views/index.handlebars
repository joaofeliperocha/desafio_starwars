<h2>Pesquisar</h2>
<hr>
<table class="table table-dark">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Planeta</th>
            </tr>       
    </thead>
    {{#each planetas}}
        <tbody>
            <tr>          
                <td>{{id}}</td>
                <td>{{nome}}</td>
                <td><a href="/busca/{{nome}}"><button  class="btn btn-warning">Pesquisar por nome</button></a></td>
                <td><a href="/busca/id/{{id}}"><button  class="btn btn-warning">Pesquisar por ID</button></a></td>
            </tr>
        </tbody>
    {{/each}}
</table>

