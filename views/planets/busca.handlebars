<h2>BUSCA</h2>
<a href="/admin/planetas/aparicoes/"<button class="btn btn-success mt-4">Mostrar aparições</button></a>
<hr>
<table class="table table-dark">
    <thead>
        <tr>
            <th scope="col">Planeta</th>
            <th scope="col">Clima</th>
            <th scope="col">Terreno</th>
            </tr>
        
    </thead>
    {{#each planetas}}
        <tbody>
            <tr>          
                <!--<th scope="row">1</th>-->
                <td>{{nome}}</td>
                <td>{{clima}}</td>
                <td>{{terreno}}</td>  
                <td><a href="/planets/{{nome}}"><button type="submit" class="btn btn-warning">Pesquisar</button></a></td>
 
            </tr>
        </tbody>
    {{/each}}
</table>